<html>
    <head>
        <style>
            h1 {
                color: red;
            }
        </style>
    </head>
    <body>
        <a href="/">back</a>
        <h1 style="color: blue;">Add Books</h1>

        <form action="/create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <p>Title<input class="form-control" type="text" name="title"></p>
            </div>

            <div class="form-group">
                <p>Description<textarea class="form-control" name="description"></textarea></p>
            </div>

            <div class="form-group">
                <p>Year<input class="form-control" type="text" name="year"></p>
            </div>

            <div class="form-group">
                <p>ISBN<input class="form-control" type="text" name="isbn"></p>
            </div>

            <div class="form-group">
                <p>Author<input class="form-control" type="text" name="author"></p>
            </div>

            <div class="form-group">
                <p>Genre<input class="form-control" type="text" name="genre"></p>
            </div>

            <div class="form-group">
                <p>Location<input class="form-control" type="text" name="location"></p>
            </div>

            <!--<div class="form-group">-->
            <!--    <p>Image<input class="form-control" type="text" name="image"></p>-->
            <!--</div>-->

            <div class="form-group">
                <p>Picture<input class="form-control" type="file" name="picture"></p>
            </div>

            <div class="row">
                <div class="col-md-12 text-right">
                    <input class="btn btn-primary" type="submit" value="Save">
                </div>
            </div>
        </form>

    </body>
</html>